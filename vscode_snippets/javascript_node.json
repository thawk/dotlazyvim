{
    "skel": {
        "prefix": "skel",
        "body": [
            "#!/usr/bin/env node",
            "",
            "const path = require('path');",
            "const glob = require('glob');",
            "const fs = require('fs');",
            "",
            "var files = glob.sync('*/index.html');",
            "var outPath = path.resolve('dist');",
            "",
            "if (!fs.existsSync(outPath)){",
            "\tfs.mkdirSync(outPath);",
            "}",
            "",
            "for (var i in presentations) {",
            "\tvar name = path.basename(path.dirname(presentations[i]));",
            "",
            "\tprocess.stdout.write(`  Processing \\${i*1+1}/\\${count}: \\${name}...`);",
            "\tprocess.stdout.write(`done.\\n`);",
            "}",
            "",
            "process.stdout.write(`  All done.\\n`);"
        ],
        "description": "file handle skel"
    },
    "arg": {
        "prefix": "arg",
        "body": [
            "const argv = require('yargs')",
            "    .option('times', {",
            "        alias: 't',",
            "        description: 'The argument',",
            "        type: 'number'",
            "    })",
            "\t.default({",
            "\t\t'times': 3",
            "\t})",
            "    .help()",
            "    .strict()",
            "    .demandCommand(0)",
            "    .example('\\$0 -a 15', 'help string')",
            "    .check((argv, options) => {",
            "        return true;",
            "    })",
            "    .parse();",
            "",
            "for (var i=0; i<argv.times; ++i) {",
            "\tconsole.log('Hello %s', argv._)",
            "}"
        ],
        "description": "yargs"
    },
    "server": {
        "prefix": "server",
        "body": [
            "const path = require(\"path\");",
            "const express = require(\"express\");",
            "const app = express();",
            "const port = 3000;",
            "",
            "// Serve our example pages as the root",
            "app.use(",
            "\t\"/\",",
            "\texpress.static(path.join(__dirname, \"./\"), {",
            "\t\textensions: [\"htm\", \"html\"] // Allow use of links without extensions",
            "\t})",
            ");",
            "",
            "// Serve Turbolinks source code",
            "app.use(",
            "\t\"/text\",",
            "\texpress.static(path.join(__dirname, \"./\"), {",
            "    setHeaders: function(res, path, stat) {",
            "\t\tres.set(\"Content-Type\", \"text/plain\"); // Set headers to text plain for easier frontend",
            "    }",
            "\t})",
            ");",
            "",
            "// Hey, Listen!",
            "app.listen(port, () =>",
            "\tconsole.log(`GitGraph server listening on port \\${port}!`)",
            ");"
        ],
        "description": "node HTTP server"
    }
}
